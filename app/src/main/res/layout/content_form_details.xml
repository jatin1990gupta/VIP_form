                            android:text="Gender "
                            android:textSize="15dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="@string/mandatory"
                            android:textColor="@color/red"
                            android:textSize="18dp"/>
                    </LinearLayout>

                    <RadioGroup
