                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/whyET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your answer"
                        android:inputType="textLongMessage" />

                </LinearLayout>

                <LinearLayout
