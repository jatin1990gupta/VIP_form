                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Reaching Out (Companies/Colleges)" />

                        <CheckBox
                            android:id="@+id/desgCB1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Designing" />

                        <CheckBox
                            android:id="@+id/markCB1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Marketing" />

                        <CheckBox
                            android:id="@+id/writCB1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Writing" />

                        <CheckBox
                            android:id="@+id/progCB1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Programming" />

                        <CheckBox
                            android:id="@+id/mangCB1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Management" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/lay_shape"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Technologies you are good at?"
                        android:textStyle="bold"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <CheckBox
                            android:id="@+id/pyCB2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Python" />

                        <CheckBox
                            android:id="@+id/javaCB2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="JavaScript" />

                        <CheckBox
                            android:id="@+id/reactCB2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="React" />

                        <CheckBox
                            android:id="@+id/angCB2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Angular" />

                        <CheckBox
                            android:id="@+id/htmlCB2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="HTML + CSS" />

                        <CheckBox
                            android:id="@+id/phpCB2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="PHP" />

                        <CheckBox
                            android:id="@+id/nodeCB2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Node.js" />

                        <CheckBox
                            android:id="@+id/sqlCB2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="SQL / NoSQL" />

                        <CheckBox
                            android:id="@+id/cCB2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="C#" />

                        <CheckBox
                            android:id="@+id/goCB2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Go" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/othertechCB2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Other: " />

                            <EditText
                                android:id="@+id/othertechTV2"
                                android:layout_width="350dp"
                                android:layout_height="wrap_content"
                                android:inputType="text" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/lay_shape"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Specializations you are working in?"
                        android:textStyle="bold"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <CheckBox
                            android:id="@+id/webCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Web Development" />

                        <CheckBox
                            android:id="@+id/appCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="App Development" />

                        <CheckBox
                            android:id="@+id/swCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Software Development" />

                        <CheckBox
                            android:id="@+id/datasCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Data Science / ML / DL" />

                        <CheckBox
                            android:id="@+id/blckCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Blockchain" />

                        <CheckBox
                            android:id="@+id/cloudCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Cloud Computing" />

                        <CheckBox
                            android:id="@+id/devCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="DevOps" />

                        <CheckBox
                            android:id="@+id/quantCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Quantum Computing" />

                        <CheckBox
                            android:id="@+id/compCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Competitive Programming" />

                        <CheckBox
                            android:id="@+id/prodCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Product Development" />

                        <CheckBox
                            android:id="@+id/cyberCB3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Cybersecurity" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/lay_shape"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your LinkedIn Profile"
                        android:textStyle="bold"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/lkinET"
                        android:layout_width="445dp"
                        android:layout_height="wrap_content"
                        android:hint="Your answer"
                        android:inputType="textWebEmailAddress" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/lay_shape"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Facebook Profile"
                        android:textStyle="bold"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/fbprofET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your answer"
                        android:inputType="textWebEmailAddress"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/lay_shape"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your GitHub Profile"
                        android:textStyle="bold"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/gitET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your answer" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/lay_shape"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Link to your Resume"
                        android:textStyle="bold"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/resumeET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your answer" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/lay_shape"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
