                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <RadioButton
                            android:id="@+id/fmaleRB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Female" />

                        <RadioButton
                            android:id="@+id/maleRB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/otherRB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Other" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
